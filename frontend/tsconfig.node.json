{
  "compilerOptions": {
    "tsBuildInfoFile": "./.tsbuildinfo",
    "incremental": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    
    "skipLibCheck": true,

    /* Modulaufl√∂sung */
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}
